import random

word_list = ['apple', 'grape', 'mango', 'peach', 'lemon']

secret_word = random.choice(word_list)

guessed_word = ['_'] * len(secret_word)

guessed_letters = []
attempts_left = 6  

print("ğŸ® Welcome to Hangman!")
print("Guess the word, one letter at a time.")
print("You have", attempts_left, "wrong guesses allowed.\n")

while attempts_left > 0 and '_' in guessed_word:
    print("Word:", ' '.join(guessed_word))
    guess = input("Enter a letter: ").lower()

    if not guess.isalpha() or len(guess) != 1:
        print("â— Please enter only a single alphabetic character.\n")
        continue

    if guess in guessed_letters:
        print("âš  You already guessed that letter. Try another.\n")
        continue

    guessed_letters.append(guess)

    if guess in secret_word:
        print("âœ… Good guess!\n")
        for index, letter in enumerate(secret_word):
            if letter == guess:
                guessed_word[index] = guess
    else:
        attempts_left -= 1
        print(f"âŒ Wrong guess! Attempts left: {attempts_left}\n")

if '_' not in guessed_word:
    print("ğŸ‰ Congratulations! You guessed the word:", secret_word)
else:
    print("ğŸ’€ Game Over! The word was:", secret_word)
